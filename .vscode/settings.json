{
  // 启用ESlint扁平化配置支持
  "eslint.experimental.useFlatConfig": true,
  // 禁用默认格式化程序，改用eslint
  "prettier.enable": false,
  "editor.formatOnSave": false,
  // 自动修正
  // "editor.codeActionsOnSave": {
  //   "source.fixAll.eslint": "explicit",
  //   "source.organizeImports": "never"
  // },
  "eslint.format.enable": true,
  // 在IDE中静默样式规则，但仍然自动修复它们
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "format/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  // 为所有支持的语言启用eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml"
  ]

}
